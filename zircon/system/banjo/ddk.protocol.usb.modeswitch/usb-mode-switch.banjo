library ddk.protocol.usb.modeswitch;

using zx;

/// Values for `SetMode`.
enum UsbMode : uint32 {
    NONE = 0;
    HOST = 1;
    PERIPHERAL = 2;
    OTG = 3;
};

[Layout = "ddk-protocol"]
protocol UsbModeSwitch {
    /// Sets the current USB mode.
    SetMode(UsbMode mode) -> (zx.status s);
};
