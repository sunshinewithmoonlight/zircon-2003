zx_library("fs-host") {
  sdk = "source"
  sdk_headers = [
    "fs-host/common.h",
    "fs-host/file_size_recorder.h",
  ]
  host = true
  sources = [
    "common.cc",
    "file_size_recorder.cc",
  ]
  public_deps = [
    # <fs-host/file_size_recorder.h> has #include <lib/zircon-internal/thread_annotations.h>.
    "$zx/system/ulib/zircon-internal:headers",
  ]
  deps = [ "$zx/system/ulib/fbl" ]
}
