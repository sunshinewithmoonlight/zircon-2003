# Separated into own target, so it is easier to cleanup later.
test("metrics-composite-latency-event") {
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  if (is_fuchsia) {
    testonly = false
  }
  if (is_fuchsia) {
    configs += [ "//build/unification/config:zircon-migrated" ]
  }
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  test_group = "fs"
  sources = [ "composite_latency_event_test.cc" ]
  deps = [
    "//zircon/public/lib/cobalt-client",
    "//zircon/public/lib/in-memory-logger",
    "//zircon/public/lib/metrics-cobalt",
    "//zircon/public/lib/metrics-composite-latency-event",
    "//zircon/public/lib/metrics-inspect",
    "//zircon/public/lib/inspect",
    "//zircon/public/lib/zxtest",
  ]
}

