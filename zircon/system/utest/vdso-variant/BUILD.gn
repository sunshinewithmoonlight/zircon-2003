assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/unification/images/migrated_manifest.gni")

test("vdso-variant") {
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  testonly = false
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "vdso-variant.c" ]
  deps = [ "//zircon/public/lib/fdio" ]
  data_deps = [ ":vdso-variant-helper" ]
  libs = [ "zircon" ]
}

executable("vdso-variant-helper") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  testonly = false
  visibility = [ ":*" ]
  sources = [ "helper/vdso-variant-helper.c" ]
  deps = [
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/unittest",
  ]
}

migrated_manifest("vdso-variant-manifest") {
  deps = [ ":vdso-variant" ]
}

migrated_manifest("vdso-variant-helper-manifest") {
  deps = [ ":vdso-variant-helper" ]
}
