zx_host_tool("mkfs-msdosfs") {
  sources = [
    "mkfs_msdos.c",
    "mkfs_msdos.h",
    "newfs_msdos.c",
  ]
  if (is_fuchsia) {
    deps = [
      "$zx/system/ulib/fdio",
      "$zx/system/ulib/zircon",
    ]
  }
  if (is_host) {
    defines = [
      "_XOPEN_SOURCE",
      "_GNU_SOURCE",
    ]
  }
}
